{
  "name": "menubar",
  "regions": [
    "us-east-1"
  ],
  "static": {
    "dir": "dist"
  },
  "lambda": {
    "memory": 1536,
    "policy": [
      {
        "Effect": "Allow",
        "Resource": "*",
        "Action": [
          "ses:SendEmail"
        ]
      }
    ]
  },
  "environment": {},
  "hooks": {
    "build": "yarn build"
  },
  "stages": {
    "production": {
      "domain": "menubar.io",
      "zone": "menubar.io"
    }
  }
}
