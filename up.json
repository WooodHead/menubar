{
  "name": "menubar",
  "regions": [
    "us-east-1"
  ],
  "static": {
    "dir": "dist"
  },
  "lambda": {
    "memory": 1536,
    "policy": [
      {
        "Effect": "Allow",
        "Resource": "*",
        "Action": [
          "ses:SendEmail"
        ]
      }
    ]
  },
  "environment": {
    "TOKEN": "${ssm:/menubar/TOKEN}",
    "PROJECT_ID": "${ssm:/menubar/PROJECT_ID}",
    "GITHUB_TOKEN": "${ssm:/menubar/GITHUB_TOKEN}",
    "GRAPHQL_ENDPOINT": "${ssm:/menubar/GRAPHQL_ENDPOINT}",
    "BASE_URI": "${ssm:/menubar/BASE_URI}",
    "SES_DESTINATION_ADDRESS": "${ssm:/menubar/SES_DESTINATION_ADDRESS}",
    "SES_SOURCE_ARN": "${ssm:/menubar/SES_SOURCE_ARN}"
  },
  "hooks": {
    "build": "yarn build",
    "clean": [
      "up-env restore"
    ]
  },
  "stages": {
    "production": {
      "domain": "menubar.io",
      "zone": "menubar.io"
    }
  }
}
